a=float(input("entre the first numbre:"))
b=float(input("entre the second numbre:"))
if (a<0 and b<0) or (a>0 and b>0):
    print("the value of the first number:",b)
    print("the value of the second number:",a)  
else:
    print("the value of the first number:",b+a)
    print("the value of the second number:",b*a)